<Window x:Class="WpfAuthenticationApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Email:" FontSize="16"/>
            <TextBox Name="EmailTextBox" FontSize="14" Margin="0,5,0,20"/>

            <TextBlock Text="Password:" FontSize="16"/>
            <PasswordBox Name="PasswordBox" FontSize="14" Margin="0,5,0,20"/>

            <Button Content="Login" Click="LoginButton_Click" Width="100" Height="30" HorizontalAlignment="Center"/>
            <TextBlock Name="ErrorMessage" Foreground="Red" Visibility="Collapsed" FontSize="14" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>

