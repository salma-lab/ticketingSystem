<Window x:Class="WpfAuthenticationApp.TicketDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ticket Details" Height="500" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Ticket Details" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="10" />

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Margin="10" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Email:" FontWeight="Bold" />
                <TextBox Text="{Binding SelectedTicket.Email}" IsReadOnly="True" />

                <TextBlock Text="Nom Etage:" FontWeight="Bold" Margin="0,10,0,0" />
                <TextBox Text="{Binding SelectedTicket.NomEtage}" IsReadOnly="True" />

                <TextBlock Text="Description:" FontWeight="Bold" Margin="0,10,0,0" />
                <TextBox Text="{Binding SelectedTicket.Description}" />

                <TextBlock Text="Status:" FontWeight="Bold" Margin="0,10,0,0" />
                <TextBox Text="{Binding SelectedTicket.NomStatus}" 
                           />

                <TextBlock Text="Motif:" FontWeight="Bold" Margin="0,10,0,0" />
                <TextBox Text="{Binding SelectedTicket.MotifDemande}" />

                <TextBlock Text="Date Creation:" FontWeight="Bold" Margin="0,10,0,0" />
                <TextBox Text="{Binding SelectedTicket.DateCreation, StringFormat=yyyy/MM/dd HH:mm}" IsReadOnly="True" />

                <TextBlock Text="Oralement:" FontWeight="Bold" Margin="0,10,0,0" />
                <CheckBox IsChecked="{Binding SelectedTicket.Oralement}" />
                <TextBlock Text="Oralement:" FontWeight="Bold" Margin="0,10,0,0" />
                <CheckBox IsChecked="{Binding SelectedTicket.Validation1}" />
                <TextBlock Text="Type Appareil:" FontWeight="Bold" Margin="0,10,0,0" />
                <TextBox Text="{Binding SelectedTicket.NomTypeAppareil}" IsReadOnly="True" />

                <TextBlock Text="Emplacement:" FontWeight="Bold" Margin="0,10,0,0" />
                <TextBox Text="{Binding SelectedTicket.NomEmplacement}" IsReadOnly="True" />

                <TextBlock Text="Appareil Nom:" FontWeight="Bold" Margin="0,10,0,0" />
                <TextBox Text="{Binding SelectedTicket.AppareilNom}" />

                <TextBlock Text="Type Intervention:" FontWeight="Bold" Margin="0,10,0,0" />
                <TextBox Text="{Binding SelectedTicket.NomType}" />

                <TextBlock Text="Validation Time:" FontWeight="Bold" Margin="0,10,0,0" />
                <TextBox Text="{Binding SelectedTicket.ValidationTime, StringFormat=yyyy/MM/dd HH:mm}" IsReadOnly="True" />
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="10">
            <Button Content="Save" Width="100" Margin="5" Click="SaveButton_Click" />
            <Button Content="Print" Width="100" Margin="5" Click="PrintButton_Click" />
            <Button Content="Close" Width="100" Margin="5" Click="CloseButton_Click" />
        </StackPanel>
    </Grid>
</Window>
