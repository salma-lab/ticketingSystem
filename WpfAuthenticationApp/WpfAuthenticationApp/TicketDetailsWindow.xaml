<Window x:Class="WpfAuthenticationApp.TicketDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Détails du Ticket" Height="700" Width="700" Background="#E3F2FD">

    <!-- Window Resources for Styling -->
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,3,0,3"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,3,0,5"/>
            <Setter Property="Background" Value="#BBDEFB"/>
            <Setter Property="BorderBrush" Value="#90CAF9"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#64B5F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderBrush" Value="#42A5F5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <!-- ScrollViewer to allow scrolling -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Détails du Ticket" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <!-- Basic Ticket Information Section -->
                <GroupBox Header="Informations de Base" Margin="0,0,0,15" Background="White" BorderBrush="#90CAF9" BorderThickness="1">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Email:" Grid.Row="0" Grid.Column="0" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Email}" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10"/>

                        <TextBlock Text="Description:" Grid.Row="1" Grid.Column="0" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Description}" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"/>

                        <TextBlock Text="Date de Création:" Grid.Row="2" Grid.Column="0" FontWeight="Bold"/>
                        <TextBlock Text="{Binding DateCreation, StringFormat=yyyy/MM/dd HH:mm}" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10"/>

                        <TextBlock Text="Temps de Validation:" Grid.Row="3" Grid.Column="0" FontWeight="Bold"/>
                        <TextBlock Text="{Binding ValidationTime, StringFormat=yyyy/MM/dd HH:mm}" Grid.Row="3" Grid.Column="1" Margin="0,0,0,10"/>
                    </Grid>
                </GroupBox>

                <!-- Device and Location Information Section -->
                <GroupBox Header="Appareil et Emplacement" Margin="0,0,0,15" Background="White" BorderBrush="#90CAF9" BorderThickness="1">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Nom de l'Appareil:" Grid.Row="0" Grid.Column="0" FontWeight="Bold"/>
                        <TextBlock Text="{Binding AppareilNom}" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10"/>

                        <TextBlock Text="Etage:" Grid.Row="1" Grid.Column="0" FontWeight="Bold"/>
                        <TextBlock Text="{Binding NomEtage}" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"/>

                        <TextBlock Text="Emplacement:" Grid.Row="2" Grid.Column="0" FontWeight="Bold"/>
                        <TextBlock Text="{Binding NomEmplacement}" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10"/>
                    </Grid>
                </GroupBox>

                <!-- Request and Status Information Section -->
                <GroupBox Header="Détails de la Demande et Statut" Margin="0,0,0,15" Background="White" BorderBrush="#90CAF9" BorderThickness="1">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Motif de la Demande:" Grid.Row="0" Grid.Column="0" FontWeight="Bold"/>
                        <TextBlock Text="{Binding MotifDemande}" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10"/>

                        <TextBlock Text="Type d'Intervention:" Grid.Row="1" Grid.Column="0" FontWeight="Bold"/>
                        <TextBlock Text="{Binding NomType}" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"/>

                        <TextBlock Text="Type d'Appareil:" Grid.Row="2" Grid.Column="0" FontWeight="Bold"/>
                        <TextBlock Text="{Binding NomTypeAppareil}" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10"/>

                        <TextBlock Text="Statut:" Grid.Row="3" Grid.Column="0" FontWeight="Bold"/>
                        <TextBlock Text="{Binding NomStatus}" Grid.Row="3" Grid.Column="1" Margin="0,0,0,10"/>

                        <TextBlock Text="Efficacité:" Grid.Row="4" Grid.Column="0" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Efficacity}" Grid.Row="4" Grid.Column="1" Margin="0,0,0,10" Foreground="{Binding EfficacityColor}"/>

                        <TextBlock Text="Durée:" Grid.Row="5" Grid.Column="0" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Duration}" Grid.Row="5" Grid.Column="1" Margin="0,0,0,10"/>
                    </Grid>
                </GroupBox>

                <Button Content="Fermer" HorizontalAlignment="Right" Click="CloseButton_Click" Margin="10"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>




